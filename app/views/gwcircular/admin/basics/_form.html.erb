<%
  admin_form = false
  admin_form = true if @is_sysadm    #システム管理者ならフル機能入力フォーム
  admin_form = true if @is_bbsadm    #回覧板管理者ならフル機能入力フォーム
  admin_form = false unless @item.create_section.blank? if @is_bbsadm unless @is_sysadm   #システム管理者以外の回覧板管理者で、回覧板が課ユーザ作成なら制限入力フォーム
  admin_form = false unless @item.create_section_flag.blank? if @is_bbsadm unless @is_sysadm   #システム管理者以外の回覧板管理者で、回覧板が課ユーザ作成なら制限入力フォーム
%>
<% if admin_form %>
  <%= render :partial => 'form_admin', :locals => {:f => f} %>
<% else %>
  <%= render :partial => 'form_section', :locals => {:f => f} %>
<% end %>
