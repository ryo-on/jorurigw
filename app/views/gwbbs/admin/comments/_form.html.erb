<div class="docsInnerBox">
  <table class="bbsExpirydate">
    <tr>
      <td>公開終了日 : </td>
      <td class="space"></td>
      <td><%=@item.expiry_date.strftime('%Y-%m-%d') unless @item.expiry_date.blank?%></td>
    </tr>
  </table>

  <table class="bbsCreator">
    <tr>
      <th style="width: 90px; text-align: left;">記事管理課 :</th>
      <td style="text-align: left;"><%=@item.section_name%></td>
    </tr>
  </table>

<%if @title.importance == 1 or @title.category == 1 %>
  <table class="bbsImportance">
    <tr>
      <%if @title.importance == 1 %>
        <th style="width: 90px; text-align: left;">ステータス : </th>
        <td style="text-align: left;"><%=@item.importance_name%></td>
      <%end%>
     </tr>
     <tr>
      <%if @title.category == 1 %>
        <th style="width: 60px; text-align: left;"><%= @title.category1_name  unless @title.category1_name.blank? %> : </th>
        <td style="text-align: left;"><%= gwbd_category_name(@d_categories, @item.category1_id) %></td>
      <% end %>
    </tr>
  </table>
<% end %>

  <div class="bbsCreatorInf">
    <table>
      <tr>
        <td>作成者 : </td>
        <td><%= @item.creater %></td>
        <td class="space"></td>
        <td><%= @item.createrdivision %></td>
        <td class="space"></td>
        <td><%= @item.createdate %></td>
      </tr>
    <tr>
      <td>編集者 : </td>
      <td><%= @item.editor %></td>
        <td class="space"></td>
      <td><%= @item.editordivision %></td>
        <td class="space"></td>
      <td><%= @item.editdate %></td>
    </tr>
    </table>
  </div>

<%= render :partial => @title.gwbbs_form_name + 'show' %>
