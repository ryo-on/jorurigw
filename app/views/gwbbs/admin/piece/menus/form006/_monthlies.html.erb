<h3 class="iconSideMonth">通知日別<span class="<%= 'current' if params[:state] == 'DATE'%>"><%=link_to('通知日別', "#{@title.docs_path}&state=DATE")%></span></h3>
<%lcnt = 0%>
<ul>
<% for monthly in @monthlies %>
  <%monthly_name = monthly.inpfld_006w + "(#{monthly.cnt})"%>
  <li>・<%=link_to(monthly_name, @title.docs_path + "&state=DATE&yyyy=#{URI.encode(monthly.inpfld_006w)}")%></li>
  <%lcnt = lcnt + 1%>
  <%break if @title.monthly_view_line <= lcnt if 0 < @title.monthly_view_line%>
<% end %>
</ul>
