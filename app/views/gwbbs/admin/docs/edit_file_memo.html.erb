<%
  update_memo_path = "/_admin/gwboard/#{@file.parent_id}/attaches/#{@file.id}/update_file_memo?system=#{@file.system_name}&title_id=#{@file.title_id}#{gwbbs_params_set}"
%>
<%= render :partial => 'show_doc' %>

<%= form_for :file, :url => update_memo_path, :html => {:method => :put} do |f| %>
  <%= f.error_messages %>
  <%= render :partial => '/gwboard/admin/docs/file_memo_form', :locals => {:f => f} %>
  <%= render :partial => 'hidden_form', :locals => {:f => f} %>
  <div class="submitters">
    <input id="<%= f.object_name %>_submit" name="commit"  type="submit" value="保存" />
  </div>
<% end %>

<div class="btReturn">
  <%= link_to '詳細へ戻る', "#{@file.item_doc_path(@title,@item)}#{gwbbs_params_set}" %>
  <%= link_to '一覧へ戻る', "#{@title.docs_path}#{gwbbs_params_set}" %>
</div>
