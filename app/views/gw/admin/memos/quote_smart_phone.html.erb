<%
@create_path  = gw_memos_path
send_cls = nz(params[:s_send_cls], 1).to_s
%>
<div class="piece memo index">
<div class="pieceHeader">
<%= render :partial => '/gw/admin/memos/piece_header' %>
</div>
<div class="pieceBody">
<div class="pieceBodyHeader">
<%= render(:partial => 'search') %>
<%= memos_tabbox_struct send_cls, @qsa %>
<div id="contentTable">
<%= form_for :item, :url => @create_path ,:action=>:create ,:method=>:post , :html => {:class=>"leftSide"} do |f| %>
<%= f.error_messages %>

<div class="userSelect">
<%=link_to image_tag("/_common/themes/gw/files/smartphone/btn/ic_act_okuria-userchoice.gif"), "/gw/mobile_participants?view=quote&memo_id=#{@item.id}"%>

<span class="textRed">10人まで</span>
</div>
<%= render :partial => 'form', :locals => {:f => f} %>
<br />
<br />
<%=submit_for_create f, :caption=>"送信する"%>
<% end  %>
<p class="leftPad2">
<%=link_to "戻る", "/gw/memos/?s_send_cls=#{@s_send_cls}&s_finished=#{@s_finised}"%></p>
</div>
</div>
<div class="pieceBodyBody"></div>
<div id="loadImg" style="display: none;">Now Loading...</div>
</div>
</div>