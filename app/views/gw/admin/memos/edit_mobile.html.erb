<%# app/views/gw/public/memos/edit_mobile.html.erb %>
<%
@edit_path  = gw_memo_path(@item)
%>
<hr class="borderDash"/>
<p class="mobileMemo">編集</p>
<hr class="borderDash"/>
<%= form_for :item, :url => @edit_path, :html => {:method => :put, :id => 'itemForm'} do |f| %>
<%= f.error_messages %>
<%=link_to "送り先ユーザー選択", "/gw/mobile_participants?view=edit&group_id=#{Site.user_group.id}&memo_id=#{@item.id}"%><span class="textRed">※</span><br />
<%= render :partial => 'form_mobile', :locals => {:f => f} %>
<br />
<br />
<%=submit_for_create f, :caption=>"送信する"%>
<% end  %>
<hr class="borderDash"/>
<p class="leftPad2">
<%=link_to "戻る", "/gw/memos/#{@item.id}?s_send_cls=#{@s_send_cls}&s_finished=#{@s_finised}"%></p>
<hr class="borderDash"/>
<p class="leftPad2">
<%=link_to "一覧画面へ", "/gw/memos?s_send_cls=#{@s_send_cls}&s_finished=#{@s_finised}"%></p>