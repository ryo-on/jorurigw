<%
javascript_fname = 'search_submit();'
grouplist = Gwsub.grouplist4(nil, 'all', true ,nil , nil, :return_pattern => 2)
%>
<%= form_tag '', :method => :get, :class => 'search', :name => 'search' do -%>  
<%= hidden_field_tag('cls', params[:cls]) unless params[:cls].blank? %>
<table>
  <tr>
    <td>
      種別 <%= select_tag(:s_type_id, options_from_collection_for_select(@prop_types, :id, :name, params[:s_type_id]), :prompt => "すべて", :onchange=>javascript_fname ) %>
    </td>
    <% if @is_gw_admin %>
    <td>
      施設管理所属 <%= select_tag('s_admin_gid' , options_for_select( grouplist, @s_admin_gid), :onchange=>javascript_fname ) %>
    </td>
    <% end %>
    <% if false %>
    <td>
      予約可能所属 <%= select_tag('s_edit_gid' , options_for_select( @s_edit_group, @s_edit_gid), :onchange=>javascript_fname ) %>
    </td>
    <td>
      照会可能所属 <%= select_tag('s_read_gid' , options_for_select( @s_read_group, @s_read_gid), :onchange=>javascript_fname ) %>
    </td>
    <% end %>
  </tr>
</table>
<% end -%>
