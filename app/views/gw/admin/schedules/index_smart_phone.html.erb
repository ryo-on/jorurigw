<%link_params = Gw.a_to_qs(["gid=#{params[:gid]}", "uid=#{Site.user.id}", "cgid=#{params[:cgid]}","dis=#{@dis}"])%>

<div id="schedule_part">
<%=render(:partial => '/gw/admin/schedules/smartphone_header')%>
<%=render(:partial => '/gw/admin/schedules/schedule_line_box', :locals=>{:d=>@st_date, :mode=>'week', :move_mode=>:header})%>
<%if params[:gid].blank?%>
  <%if params[:cgid].blank?%>
    <%if @dis=="day"%>
<%= render(:partial => '/gw/admin/schedules/show_days')%>
    <%elsif @dis=="week"%>
<%= render(:partial => '/gw/admin/schedules/show_week', :locals=>{:link_params=>link_params})%>
    <%else%>
<%= render(:partial => '/gw/admin/schedules/show', :locals=>{:link_params=>link_params})%>
    <%end%>
  <%else%>
<%= render(:partial => '/gw/admin/schedules/show_days')%>
  <%end%>
<%else%>
<%= render(:partial => '/gw/admin/schedules/show_days')%>
<%end%>
<%=render(:partial => '/gw/admin/schedules/schedule_line_box', :locals=>{:d=>@st_date, :mode=>'week', :move_mode=>:footer})%>
</div><!--schedule_part-->