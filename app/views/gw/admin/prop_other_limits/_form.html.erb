<% count = current_count_group_props_each(@item.gid, @prop_types) %>

<%= f.error_messages %>

<%= required_head %>

<table class="show">
<tr>
  <th class="group">所属</th><td><%= @item.group.name %><%= f.hidden_field :gid, :value => @item.gid %></td>
</tr>
<tr>
  <th class="item">制限数<%= required %></th><td><%= f.text_field :limit, :class => 'IMEoff', :size => 10 %></td>
</tr>
<tr>
  <th class="item">合計</th><td><%= count[@prop_types.size] %></td>
</tr>
<% @prop_types.each_with_index do |type, i| %>
<tr>
  <th class="item"><%= type.name %></th><td><%= count[i] %></td>
</tr>
<% end %>
</table>
