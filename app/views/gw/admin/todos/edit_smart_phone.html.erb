<%# app/views/gw/public/todos/edit_mobile.html.erb %>
<div class="piece memo index">
<div class="pieceHeader">
<%=render :partial => '/gw/admin/todos/piece_header'%>
</div>
<div class="pieceBody">
<div class="pieceBodyHeader">

<%= form_for :item, :url => "/gw/todos/#{@item.id}", :html => {:method => :put, :id => 'itemForm'} do |f|%>
<%=f.error_messages%>
<%=render(:partial => 'form', :locals => {:f => f})%>
<%=@item.is_finished ? '' : submit_for_update(f, :caption=>'確定する')%>
<%end%>

<p class="leftPad2">
<%=link_to "戻る", "/gw/todos/?s_finished=#{@s_finised}"%>
</p>
</div>
<div class="pieceBodyBody"></div>
</div>
</div>