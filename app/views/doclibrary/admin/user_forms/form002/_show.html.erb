<table class="docformBody">
  <tr>
    <th style="width: 90px; text-align: left;">和暦</th>
    <td><%= @item.inpfld_001 %></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">年</th>
    <td><%= @item.inpfld_002 %></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">月</th>
    <td><%= @item.inpfld_003 %></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">その</th>
    <td><%= @item.inpfld_007 %></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">号区分,区分</th>
    <td>
<%
if @parent
  tree = @parent.parent_tree; tree.each_with_index do |c, k| %>
  <%=c.name%>/
<% end
end %>
    </td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">号数</th>
    <td><%=@item.inpfld_006%></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">件名</th>
    <td><%=@item.title%></td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">所管部</th>
    <td>
      <% @item.inpfld_008.to_i== 0 ? dep=nil : dep = System::Group.find(@item.inpfld_008.to_i) %>
      <%= dep.code+dep.name unless dep.blank? %>
    </td>
  </tr>
  <tr>
    <th style="width: 90px; text-align: left;">所管課</th>
    <td>
      <% @item.inpfld_010.to_i===0 ? sec=nil : sec = System::Group.find(@item.inpfld_010.to_i) %>
      <%= sec.code+sec.name unless sec.blank? %>
    </td>
  </tr>
