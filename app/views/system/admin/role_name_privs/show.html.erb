<%
  edit_path       = "/system/role_name_privs/#{@item.id}/edit#{@params_set}"
  delete_path     = "/system/role_name_privs/#{@item.id}#{@params_set}"
%>
<div class="piece AdminMessage">

<%= render :partial => 'header' %>
<div class="pieceBody">
<div class="editingBox">
  <span class="btEdit"><%= link_to "編集" , url_for(edit_path)  if @item.editable? %></span>
  <span class="btDestroy"><%= link_to "削除" , url_for(delete_path), :confirm => "削除して、よろしいですか？", :method => :delete if @item.deletable? %></span>
</div>

<table class="show">
  <tr>
    <th>機能名</th>
    <td><%= @item.role.display_name %></td>
  </tr>
  <tr>
    <th>権限名</th>
    <td><%= @item.priv.display_name %></td>
  </tr>
</table>

<!--戻るボタン-->
<div class="btReturn">
  <%=link_to '戻る', "/system/role_name_privs#{@params_set}" %>
</div>

</div>
</div>
