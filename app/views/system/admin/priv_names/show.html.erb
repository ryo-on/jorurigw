<div class="piece AdminMessage">
<%= render :partial => 'header' %>

<div class="pieceBody">

<div class="editingBox">
 <span class="btEdit"><%= link_to "編集", "/system/priv_names/#{@item.id}/edit?#{@qs}" if @item.editable? %></span>
 <span class="btDestroy"><%= link_to "削除", "/system/priv_names/#{@item.id}?#{@qs}", :confirm => "削除して、よろしいですか？", :method => :delete if @item.deletable? %></span>
</div>

<table class="show">
  <tr>
    <th>ステータス</th>
    <td><%= @item.state_label %></td>
  </tr>
  <tr>
    <th>権限対象名</th>
    <td><%= @item.display_name %></td>
  </tr>
  <tr>
    <th>権限コード</th>
    <td><%= @item.priv_name %></td>
  </tr>
  <tr>
    <th>表示順</th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>

<!--戻るボタン-->
<div class="btReturn">
  <%=link_to '戻る', "/system/priv_names?#{@qs}" %>
</div>

</div>
</div>