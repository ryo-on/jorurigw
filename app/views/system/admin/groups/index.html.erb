<div class="piece AdminSetting AdminGroups">
<%= render :partial => 'header' %>
  <div class="pieceBody">
    <%= render :partial => '/system/admin/users/header_menu' %>
    <%= render :partial => 'switching' %>
    <%= render :partial => 'navi' %>
    <%= div_notice %>

    <div class="editingBox">
      <span class="btNew"><%= link_to '新規作成', new_system_group_path %></span>
    </div>
    
    <%= form_tag '', :method => :get, :class => 'search' do %>
    <table>
      <tr>
        <td>
        	LDAP<%= filter_select_tag :ldap, 'system_users_ldaps', params, :default => :all %>
        	状態<%= filter_select_tag :state, 'system_states', params, :default => :enabled %>
		</td>
        <td class="submitters">
          <%= submit_tag '検索',     :name => :search %>
        </td>
      </tr>
    </table>
    <% end %>
    
    
    <% if @items.blank? %>
      <div class="notice">表示する項目はありません。</div>
    <% else %>
    <table class="index">
      <tbody>
        <tr>
          <th></th>
          <th></th>
          <th>グループID</th>
          <th>グループ名</th>
          <th>メールアドレス</th>
          <th>適用開始日</th>
          <th>適用終了日</th>
          <th>LDAP同期</th>
          <th>状態</th>
        </tr>
        <% for item in @items %>
        <tr class="<%= cycle '', 'cycle' %>">
          <td><%= link_to '展開', "/system/#{item.id}/groups" %></td>
          <td><%= link_to '詳細', "/system/#{@parent.id}/groups/#{item.id}" %></td>
          <td><%= item.code %></td>
          <td><%= item.name %></td>
          <td><%= item.email %></td>
          <td><%= Gw.date_str(item.start_at) %></td>
          <td><%= Gw.date_str(item.end_at) %></td>
          <td><%= System::UsersGroup.ldap_show(item.ldap) %></td>
          <td><%= System::UsersGroup.state_show(item.state) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
    <% end %>
  </div>
</div>
