<%
edit_link = link_to('編集' ,"/gwsub/sb04/04/sb04assignedjobs/#{@item.id}/edit?#{@qs}")

stafflists = Gwsub::Sb04stafflist.find(:all, :conditions=>"section_id = #{@item.section_id} and assignedjobs_id = #{@item.id}")
if stafflists.empty?
  confirm = "削除してよろしいですか？"
else
  confirm1 = "担当コードを削除した場合、この担当コードを利用している職員が有している担当情報は残ることになります。\n必要に応じて、職員の担当の割り当てを変更してください。\n\n"
  stafflist_names = stafflists.collect{|x| x.name}.join('、')
  confirm2 = "この担当コードを使用している職員は、#{stafflist_names}となります。\n削除してよろしいですか？"
  confirm = confirm1 + confirm2
end
delete_link = link_to('削除'  ,"/gwsub/sb04/04/sb04assignedjobs/#{@item.id}?#{@qs}" ,:confirm=>confirm ,:method=>:delete)
-%>

<!-- コード管理 -->
<div class="gwsub sb04">
  <%= render :partial => 'gwsub/admin/sb04/sb04_piece_header' %>
  <div class="pieceBanner">
    <%= render :partial => 'gwsub/admin/sb04/sb04_subfunction_select_menu' %>
    <%= render :partial => 'gwsub/admin/sb04/sb04_level3menu_header' %>
    <%= render :partial => 'gwsub/admin/sb04/sb04assignedjobs/display_name' %>
    <div class="showMenu">
    <% if @role_sb04_dev && Gwsub::Sb04stafflistviewMaster.is_sb04_dev_group_role(@item.fyear_id, @item.section_code) %>
      <%= edit_link %>
      <%= delete_link %>
    <% elsif @u_role %>
      <%= edit_link %>
      <%= delete_link if @role_admin==true or @role_developer==true %>
    <% end %>
    </div>
  </div>
  <div class="pieceBody">
    <%= div_notice %>

    <table class="show">
      <tbody>
        <tr>
          <th>年度</th>
          <td><%= @item.fyear_markjp -%></td>
        </tr>
        <tr>
          <th>所属コード</th>
          <td><%= @item.section_code -%></td>
        </tr>
        <tr>
          <th>所属名称</th>
          <td><%= @item.section_name -%></td>
        </tr>
        <tr>
          <th>担当コード</th>
          <td><%= @item.code -%></td>
        </tr>
        <tr>
          <th>担当名称</th>
          <td><%= @item.name -%></td>
        </tr>
        <tr>
          <th>担当電話</th>
          <td><%= @item.tel -%></td>
        </tr>
        <tr>
          <th>担当住所・電話</th>
          <td><%= @item.address -%></td>
        </tr>
        <tr>
          <th>備考</th>
          <td><%= @item.remarks -%></td>
        </tr>
      </tbody>
    </table>


    <div class="btReturn">
    <%= link_to '一覧に戻る',"/gwsub/sb04/04/sb04assignedjobs?#{@qs}" %>
    </div>
  </div>
</div>
