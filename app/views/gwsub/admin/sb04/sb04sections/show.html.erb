<div class="gwsub sb04">
  <%= render :partial => 'gwsub/admin/sb04/sb04_piece_header' %>
  <div class="pieceBanner">
    <%= render :partial => 'gwsub/admin/sb04/sb04_subfunction_select_menu' %>
    <%= render :partial => 'gwsub/admin/sb04/sb04_level3menu_header' %>
    <%= render :partial => 'gwsub/admin/sb04/sb04sections/display_name' %>
    <div class="showMenu">
    <%= link_to '編集' , "/gwsub/sb04/04/sb04sections/#{@item.id}/edit?#{@qs}" %>
    <%= link_to '削除'  ,"/gwsub/sb04/04/sb04sections/#{@item.id}?#{@qs}" ,:confirm=>"削除してよろしいですか？" ,:method=>:delete if @role_admin==true or @role_developer==true %>
    </div>
  </div>
  <div class="pieceBody">
    <%= div_notice %>
    <table class="show">
      <tbody>
        <tr>
          <th>年度</th>
          <td><%= @item.fyear_markjp -%></td>
        </tr>
        <tr>
          <th>所属コード</th>
          <td><%= @item.code -%></td>
        </tr>
        <tr>
          <th>所属名称</th>
          <td><%= @item.name -%></td>
        </tr>
        <tr>
          <th>備考</th>
          <td><%= @item.remarks -%></td>
        </tr>
        <tr>
          <th>座席表所属記事URL</th>
          <td><%= link_to(@item.bbs_url) -%></td>
        </tr>
        <tr>
          <th>所属コード(システム)</th>
          <td><%= @item.ldap_code -%></td>
        </tr>
        <tr>
          <th>所属名称(システム)</th>
          <td><%= @item.ldap_name -%></td>
        </tr>
      </tbody>
    </table>

    <div class="btReturn">
      <%= link_to '一覧に戻る',"/gwsub/sb04/04/sb04sections?#{@qs}"         if params[:v]=='1' -%>
      <%= link_to '一覧に戻る',"/gwsub/sb04/04/sb04sections/index2?#{@qs}"  if params[:v]=='2'  -%>
    </div>
  </div>
</div>
